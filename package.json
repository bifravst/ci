{
  "name": "@hello.nrfcloud.com/backend",
  "version": "0.0.0-development",
  "description": "Sets up the permissions in our CI account for all repositories in this account to be able to use it for CI runs.",
  "type": "module",
  "scripts": {
    "prepare": "husky && check-node-version --package",
    "test": "npx globstar -- npx tsx --test --test-reporter spec \"!(node_modules)/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hello-nrfcloud/backend.git"
  },
  "bugs": {
    "url": "https://github.com/hello-nrfcloud/backend/issues"
  },
  "homepage": "https://github.com/hello-nrfcloud/backend#readme",
  "keywords": [
    "nordicsemiconductor",
    "cellular-iot",
    "hello-nrfcloud",
    "aws",
    "cdk"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@aws-sdk/client-iam": "3.549.0",
    "@bifravst/eslint-config-typescript": "6.0.19",
    "@bifravst/prettier-config": "1.0.0",
    "@commitlint/config-conventional": "19.1.0",
    "aws-cdk": "2.135.0",
    "aws-cdk-lib": "2.135.0",
    "cdk": "2.135.0",
    "check-node-version": "4.2.1",
    "commitlint": "19.2.1",
    "constructs": "10.3.0",
    "globstar": "1.0.0",
    "husky": "9.0.11",
    "tsx": "4.7.2"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "prettier": "@bifravst/prettier-config",
  "dependencies": {
    "@aws-lambda-powertools/metrics": "2.0.3",
    "@bifravst/run": "1.2.0",
    "@hello.nrfcloud.com/certificate-helpers": "1.0.0",
    "@hello.nrfcloud.com/lambda-helpers": "1.0.0",
    "@hello.nrfcloud.com/proto": "6.5.0",
    "@middy/core": "5.3.2",
    "@nordicsemiconductor/from-env": "3.0.1",
    "@nordicsemiconductor/random-words": "8.0.1",
    "@nordicsemiconductor/timestream-helpers": "6.0.2",
    "@octokit/rest": "20.1.0",
    "@sinclair/typebox": "0.32.20",
    "lodash-es": "4.17.21",
    "p-limit": "5.0.0",
    "table": "6.8.2"
  }
}
